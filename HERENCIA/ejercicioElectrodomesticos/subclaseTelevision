
//SUBCLASE TELEVISION

public class television extends electrodomestico {
	
	protected static int resolucion;
	protected static boolean sintonizador;
	protected final int resoDef=20;
	

	
	//Constructor por defecto
	public television() {
		
		this.resolucion=resoDef;
		this.sintonizador=false;
		this.color=colorDef;
		this.consumoElectrico=consumoDef;
		this.precio=precioDef;
		this.peso=pesoDef;
	}
	//Constructor con precio y peso por parámetro y el resto por defecto
	public television(double precio,int peso) {
		
		this.resolucion=resoDef;
		this.sintonizador=false;
		this.precio=precio;
		this.peso=peso;
		this.color=colorDef;
		this.consumoElectrico=consumoDef;
		
	}
	//Constructor con resolución y sintonizador por parámetro y el resto heredado
	public television(int resolucion,boolean sintonizador,String color,char consumoElectrico,double precio, int peso) {
		super(color,consumoElectrico,precio,peso);
		this.resolucion=resolucion;
		this.sintonizador=sintonizador;
		
		
	}
	
	//Métodos get de resolución y sintonizador
	
	public int getResolucion() {
		return this.resolucion;
	}
	
	public boolean getSintonizador() {
		return this.sintonizador;
	}
	
	//Método precioFinal, modifica el precio en función de la resolución
	
	public double precioFinal() {
		double precioFinal_=super.PrecioFinal();
		if(this.resolucion>40){
			System.out.println("La resolución es mayor a 40 y se incrementa el precio un 30%");
			precioFinal_+=this.precio*0.30;
			
		}else if(this.sintonizador==true) {
			System.out.println("Incorpora sintonizador TDT con lo cual se aumenta el precio a 50 € más");
			precioFinal_+=50;
		}else {
			System.err.println("No se efectúan cambios en el precio");
			
		}
		return precioFinal_;
	}
	
