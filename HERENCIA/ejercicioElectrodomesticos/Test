

//CLASE TEST


	public static void main(String[] args) {
		double sumaElectrodomesticos = 0;
		double sumaTelevisiones=0;
        double sumaLavadoras=0;
		
		//Array de electrodomésticos de 10 posiciones
		electrodomestico[] electrodomesticos_=new electrodomestico[10];
		electrodomesticos_[0]=new lavadora();
		electrodomesticos_[1]=new lavadora(300,100);
		electrodomesticos_[2]=new lavadora(10,"ROJO",'A',1000,100);
		electrodomesticos_[4]=new lavadora(20,"R ojo",'b',2000,200);
		electrodomesticos_[5]=new lavadora();
		electrodomesticos_[6]=new television();
		electrodomesticos_[7]=new television();
		electrodomesticos_[8]=new television();
		electrodomesticos_[9]=new television(534,30);
		
	
		//Recorremos el array y aplicamos el método precioFinal para mostrar el precio de cada objeto
		for(int i=0;i<electrodomesticos_.length;i++){
		
		if(electrodomesticos_[i] instanceof electrodomestico) {
			System.out.println("Electrodoméstico");
			sumaElectrodomesticos+=electrodomesticos_[i].PrecioFinal();
		}
		if(electrodomesticos_[i] instanceof television) {
			System.out.print("Televisor");
			sumaTelevisiones+=electrodomesticos_[i].PrecioFinal();
			
		}else if(electrodomesticos_[i] instanceof lavadora) {
			System.out.print("Lavadora");
			sumaLavadoras+=electrodomesticos_[i].PrecioFinal();
			
			
			}
		}
		 //Mostramos los resultados
        System.out.println("La suma del precio de los electrodomesticos es de "+sumaElectrodomesticos);
        System.out.println("La suma del precio de las lavadoras es de "+sumaLavadoras);
        System.out.println("La suma del precio de las televisiones es de "+sumaTelevisiones);
	}
}
